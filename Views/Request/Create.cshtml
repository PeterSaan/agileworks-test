@model agileworks_test.Models.Request;

<head>
    <title>Loo pöördumine</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="text-center">
    <p class="text-3xl my-3">Loo pöördumine</p>

    <form method="post" action="/Request/Create" class="my-10">
        <label for="Description">Kirjeldus:</label>
        <input type="text" id="Description" name="Description" class="border border-black rounded" required>
        <br>
        <label for="ToBeSolvedBy">Lahendamise soovitud kuupäev:</label>
        <input type="datetime-local" id="ToBeSolvedBy" name="ToBeSolvedBy" class="border border-black rounded" required>
        <br><br>

        <button type="submit" class="align-middle bg-sky-400 hover:bg-sky-500 border-0 rounded p-1">Esita pöördumine</button>
    </form>

    <a href="/Request" class="align-middle bg-sky-400 hover:bg-sky-500 border-0 rounded p-1">Mine tagasi</a>
</body>